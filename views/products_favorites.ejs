<!DOCTYPE html>
<html lang="en">

<head>
  <title>Favorites</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Changa&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/footer.css" />
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/products_favorites.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/products.js"></script>

</head>

<body>

  <%- include('partials/_header') %>

    <main>
      <!-- Favorites Section -->
      <section id="favorites">
        <h2 class="favorites-header">Favorites</h2>
        <div class="favorites-grid">
          <% favorites.forEach(function(favorite) { %>
            <div class="favorite-product">
              <img src="<%= favorite.thumbnail_photo_url %>" alt="">
              <div class="item-details">
                <a href="/products/<%= favorite.productId %>">
                  <h3 class="item-name">
                    <%= favorite.title %>
                  </h3>
                </a>
                <p class="item-price">$<%= favorite.price %>
                </p>

                <button class="delete-favorite btn btn-outline-light"
                  data-product-id="<%= favorite.productId %>">Delete</button>

              </div>
            </div>
            <% }) %>
        </div>
        <div class="favorites-controls">
          <i class="fas fa-chevron-left" id="prev-favorite"></i>
          <i class="fas fa-chevron-right" id="next-favorite"></i>
        </div>
      </section>

    </main>

    <%- include('partials/_footer') %>

</body>

</html>
