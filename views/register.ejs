<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/footer.css">


  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <header>
      <nav>
          <!-- Navigation Bar -->
          <a href="/browse">Browse Collection</a>
          <a href="/favorites">Favorites</a>
          <a href="/login">Login</a>
          <a href="/register">Register</a>
      </nav>
  </header>

  <main>
      <!-- Register Section -->
      <section id="hero">
        <Form action="/register" method="POST">
          <div class="form-group">
            <label for="email">Email Address:</label>
            <input class="form-control" type="email" name="email" placeholder="Enter Email" style="width: 300px;">
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input class="form-control" type="password" name="password" placeholder="Password" style="width: 300px;">
          </div>
          <button type="submit" class="btn btn-primary">Register</button>
        </Form>
      </section>
  </main>

  <footer>
    <div class="left-footer">
      <!-- Store Icon and HaggleHub Name -->
      <i class="fas fa-store"></i> HaggleHub

      <!-- Social Media Icons -->
      <div class="social-icons">
          <a href="https://twitter.com/yourpage" target="_blank"><i class="fab fa-twitter"></i></a>
          <a href="https://instagram.com/yourpage" target="_blank"><i class="fab fa-instagram"></i></a>
          <a href="https://facebook.com/yourpage" target="_blank"><i class="fab fa-facebook-f"></i></a>
      </div>
    </div>

  <div class="right-footer">
      <!-- Need Assistance Section -->
      <p>Need assistance?</p>
      <div class="contact-info">
          <i class="fas fa-phone"></i> (123) 456-7890
          <i class="fas fa-envelope"></i> support@hagglehub.com
      </div>
  </div>
  <!-- <p>&copy; 2023 HaggleHub: The Funko Pop Collectors Hub. All rights reserved.</p> -->
  </footer>
</body>

</html>
